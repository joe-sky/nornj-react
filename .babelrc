{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "plugins": [
    [
      "nornj-in-jsx",
      {
        "extensionConfig": {
          "stateBind": {
            "isDirective": true,
            "isBindable": true
          },
          "bind": {
            "isDirective": true,
            "isBindable": true
          }
        }
      }
    ],
    [
      "@babel/plugin-proposal-decorators",
      {
        "legacy": true
      }
    ],
    [
      "@babel/plugin-proposal-class-properties",
      {
        "loose": true
      }
    ]
  ]
}
